---
export interface Props {
  originalUrl: string | undefined;
}

const { originalUrl } = Astro.props;
const originalUrlHost = originalUrl ? new URL(originalUrl).hostname : "";
---

{
  originalUrl && (
    <p class="text-sm">
      Originally published at
      <a
        class="text-cyan-700 inline-flex"
        href={originalUrl}
        target="_blank"
        rel="nofollow noopener noreferrer"
      >
        {originalUrlHost}
        <img
          class="h-4 w-4 ml-[2px] mt-[2px]"
          src="/assets/external-link.svg"
          alt="External link icon"
        />
      </a>
    </p>
  )
}
